<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:tab= "http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:weightSum="3"
    tools:context="autohoverbutton.rakhra.com.autohoverlayout.MainActivity">


    <autohoverbutton.rakhra.com.libautohover.AutoHoverButton
        android:id="@+id/tab1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        tab:atb_background_normal="#E45641"
        tab:atb_background_selector="#5D4C46"
        tab:atb_textColor_normal="#000000"
        tab:atb_textColor_selector="#ffffff"
        tab:atb_text="LOL"
        tab:atb_textSize="18"
        tab:atb_margin="5dp"
        tab:atb_drawable_normal="@drawable/lol_normal"
        tab:atb_drawable_selector="@drawable/lol_hover">

    </autohoverbutton.rakhra.com.libautohover.AutoHoverButton>

    <autohoverbutton.rakhra.com.libautohover.AutoHoverButton
        android:id="@+id/tab2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        tab:atb_background_normal="#E45641"
        tab:atb_background_selector="#5D4C46"
        tab:atb_textColor_normal="#000000"
        tab:atb_textColor_selector="#ffffff"
        tab:atb_text="SAD"
        tab:atb_textSize="18"
        tab:atb_margin="5dp"
        tab:atb_drawable_normal="@drawable/sad_normal"
        tab:atb_drawable_selector="@drawable/sad_hover">

    </autohoverbutton.rakhra.com.libautohover.AutoHoverButton>

    <autohoverbutton.rakhra.com.libautohover.AutoHoverButton
        android:id="@+id/tab3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        tab:atb_background_normal="#E45641"
        tab:atb_background_selector="#5D4C46"
        tab:atb_textColor_normal="#000000"
        tab:atb_textColor_selector="#ffffff"
        tab:atb_text="VOMIT"
        tab:atb_textSize="18"
        tab:atb_margin="5dp"
        tab:atb_drawable_normal="@drawable/vomited_normal"
        tab:atb_drawable_selector="@drawable/vomited_hover">

    </autohoverbutton.rakhra.com.libautohover.AutoHoverButton>


</LinearLayout>
